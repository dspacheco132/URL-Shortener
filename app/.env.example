# Cassandra
CASSANDRA_HOST=localhost
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=url_shortener

# Redis (INCR counter)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_COUNTER_KEY=url_counter

# Hashids: secret + custom base62 alphabet (only the app can decode)
SECRET_KEY=your-secret-key-change-in-production
# Custom alphabet for shorter/obfuscated slugs (default: 0-9, a-z, A-Z)
BASE62_ALPHABET=0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ

# Base URL for short links (e.g. https://short.io or http://localhost:3000)
BASE_URL=http://localhost:3000

# Server
PORT=3000
